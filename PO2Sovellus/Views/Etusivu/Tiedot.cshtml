@model Sovellus.Model.Entities.Ravintola

@{
    ViewBag.Title = "Tiedot " + Model.Nimi;
}

@if (Model == null) {
    <h3>Ravintolaa ei löydy annetulla id-arvolla.</h3>
}
else {
    <h3>@Model.Nimi</h3>

    <div>
        Id: @Model.Id <br />
        Kaupunki: @Model.Kaupunki.Nimi <br />
        Tyyppi: @Model.RavintolaTyyppi.Nimi <br />
        Katuosoite: @Model.Katuosoite <br />
        Postinumero: @Model.Postinro <br />
        Kotisivu: @Model.KotisivuUrl <br />
        Kuva: @Model.KuvaUrl <br />
    </div>
    <br />
    @Html.ActionLink("Takaisin etusivulle", "Index")
}