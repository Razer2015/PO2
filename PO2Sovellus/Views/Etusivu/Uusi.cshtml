@model PO2Sovellus.ViewModels.RavintolaEditViewModel

@{
    ViewBag.Title = "Uusi";
}

<div>
    <h1>@ViewBag.Title</h1>
    <div>
        <form method="post" asp-antiforgery="true">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="Nimi"></label>
                <input class="form-control" asp-for="Nimi" />
                <span asp-validation-for="Nimi"></span>
                <br />
                <label asp-for="KaupunkiId"></label>
                <select class="form-control" asp-for="KaupunkiId" asp-items="@(new SelectList(Model.Kaupungit, "Id", "Nimi"))"></select>
                <br />
                <label asp-for="TyyppiId"></label>
                <select class="form-control" asp-for="TyyppiId" asp-items="@(new SelectList(Model.RavintolaTyypit, "Id", "Nimi"))"></select>
                <br />
                <label asp-for="Katuosoite"></label>
                <input class="form-control" asp-for="Katuosoite" />
                <span asp-validation-for="Katuosoite"></span>
                <br />
                <label asp-for="Postinro"></label>
                <input class="form-control" asp-for="Postinro" />
                <span asp-validation-for="Postinro"></span>
                <br />
                <label asp-for="KuvaUrl"></label>
                <input class="form-control" asp-for="KuvaUrl" />
                <span asp-validation-for="KuvaUrl"></span>
                <br />
                <label asp-for="KotisivuUrl"></label>
                <input class="form-control" asp-for="KotisivuUrl" />
                <span asp-validation-for="KotisivuUrl"></span>
                <br />
                <input class="btn btn-primary" type="submit" value="Lisää" />
            </div>
        </form>
